{
  "name": "flownote",
  "version": "3.0.0",
  "packageManager": "npm@11.5.1",
  "private": true,
  "description": "A Notion-like note-taking application with block-based editor",
  "workspaces": [
    "frontend",
    "backend",
    "shared",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:frontend": "turbo run dev --filter=frontend",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "db:generate": "npm run db:generate --workspace=@flownote/database",
    "db:push": "npm run db:push --workspace=@flownote/database",
    "db:migrate": "npm run db:migrate --workspace=@flownote/database",
    "db:studio": "npm run db:studio --workspace=@flownote/database",
    "db:seed": "npm run db:seed --workspace=@flownote/database",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@nestjs/cli": "^11.0.14",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^10.0.6",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^4.1.0",
    "husky": "^9.0.6",
    "semantic-release": "^22.0.12",
    "turbo": "^2.3.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emrealmaoglu/flownote.git"
  },
  "author": "FlowNote Team",
  "license": "MIT"
}
