{
  "name": "flownote",
  "version": "1.6.2",
  "private": true,
  "description": "A Notion-like note-taking application with block-based editor",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:local": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "db:reset": "read -p 'This will DELETE ALL DATA. Ensure you have a backup. Type YES to confirm: ' confirm && [ \"$confirm\" = \"YES\" ] && rm -f backend/flownote.sqlite && echo 'Database reset.' || echo 'Reset cancelled.'",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "concurrently": "^8.2.2",
    "husky": "^9.0.6",
    "semantic-release": "^22.0.12"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emrealmaoglu/flownote.git"
  },
  "author": "FlowNote Team",
  "license": "MIT"
}