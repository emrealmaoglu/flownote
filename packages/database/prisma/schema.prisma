// FlowNote Database Schema
// Prisma Schema for Note-taking Application
// Compatible with SQLite (development) and PostgreSQL (production)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Change to "postgresql" for production
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String?  @unique
  passwordHash String   @map("password_hash")
  name         String
  role         String   @default("user") // "admin" or "user"
  teamId       String?  @map("team_id")
  team         Team?    @relation(fields: [teamId], references: [id])

  // Profile
  bio          String?
  avatar       String?

  // Timestamps
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at")

  // Relations
  notes        Note[]
  folders      Folder[]
  templates    Template[]

  @@index([username])
  @@index([email])
  @@map("users")
}

// ============================================
// TEAMS
// ============================================

model Team {
  id          String   @id @default(uuid())
  name        String
  description String?

  // Relations
  members     User[]

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("teams")
}

// ============================================
// FOLDERS
// ============================================

model Folder {
  id        String   @id @default(uuid())
  name      String
  color     String?
  icon      String?

  // Hierarchy
  parentId  String?  @map("parent_id")
  parent    Folder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  Folder[] @relation("FolderHierarchy")

  // Position (for ordering)
  position  Int      @default(0)

  // Owner
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  notes     Note[]

  @@index([userId])
  @@index([parentId])
  @@map("folders")
}

// ============================================
// NOTES
// ============================================

model Note {
  id      String @id @default(uuid())
  title   String

  // Content - JSON block structure
  // { blocks: [{ id, type, order, data }, ...] }
  content String @default("{\"blocks\":[]}") // JSON string for SQLite compatibility

  // Visual Identity (Sprint 8, 12)
  iconEmoji   String? @map("icon_emoji")
  coverType   String  @default("none") @map("cover_type") // 'none' | 'gradient' | 'color' | 'image'
  coverValue  String? @map("cover_value")

  // Favorites (Sprint 12)
  isFavorite Boolean @default(false) @map("is_favorite")

  // Organization
  folderId String? @map("folder_id")
  folder   Folder? @relation(fields: [folderId], references: [id], onDelete: SetNull)

  // Hierarchy (for sub-notes)
  parentId String? @map("parent_id")
  parent   Note?   @relation("NoteHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children Note[]  @relation("NoteHierarchy")

  // Position (for ordering)
  position Int @default(0)

  // Owner
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([userId, updatedAt])
  @@index([folderId])
  @@index([parentId])
  @@index([createdAt])
  @@index([updatedAt])
  @@map("notes")
}

// ============================================
// TEMPLATES (Sprint 12)
// ============================================

model Template {
  id          String  @id @default(uuid())
  name        String
  description String?
  icon        String?
  category    String  @default("personal") // 'personal' | 'work' | 'education' | 'creative'

  // Template content (blocks format)
  content     String  @default("{\"blocks\":[]}") // JSON string

  // Visibility
  isPublic    Boolean @default(false) @map("is_public")

  // Usage stats
  usageCount  Int     @default(0) @map("usage_count")

  isBuiltin   Boolean @default(false) @map("is_builtin")

  userId      String? @map("user_id")
  user        User?   @relation(fields: [userId], references: [id])

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([category])
  @@index([isPublic])
  @@map("templates")
}

// ============================================
// SESSION (for JWT alternatives - future)
// ============================================

model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("sessions")
}
