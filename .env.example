# FlowNote Environment Configuration
# Copy this file to backend/.env for local development

# Database Type
# Use 'sqlite' for local development (no Docker needed)
# Use 'postgres' for Docker/production
DB_TYPE=sqlite

# SQLite Configuration (when DB_TYPE=sqlite)
SQLITE_DATABASE=flownote.sqlite

# PostgreSQL Configuration (when DB_TYPE=postgres)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=flownote
DATABASE_PASSWORD=flownote_secret_password
DATABASE_NAME=flownote_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# App
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Docker PostgreSQL
POSTGRES_USER=flownote
POSTGRES_PASSWORD=flownote_secret_password
POSTGRES_DB=flownote_db

# Seed User Passwords (for development)
# Override these in production!
SEED_ADMIN_PASSWORD=admin
